\documentclass[12pt]{article}
\usepackage[tmargin=20mm,bmargin=20mm,lmargin=25mm,rmargin=20mm]{geometry}

% bottom right page num
\usepackage{fancyhdr}
\pagestyle{fancy}
\renewcommand{\headrulewidth}{0pt}
\fancyhead{}
\fancyfoot{}
\fancyfoot[R]{\footnotesize\thepage}

% localized date format, hyphenation etc
\usepackage[english]{babel}

% fonts
\usepackage{fontspec}
\setmainfont{Fira Sans}
\setsansfont{Noto Serif}
\setmonofont[Scale=MatchLowercase]{Fira Mono}

% setup sections
\usepackage{titlesec}
\titleformat*{\section}{\LARGE\bfseries\sffamily}
\titleformat*{\subsection}{\Large\bfseries\sffamily}
\titleformat*{\subsubsection}{\large\bfseries\sffamily}

% admonitions
\usepackage{awesomebox}

% "better" paragraphs
\usepackage{parskip}

\usepackage{xcolor}

% if outputdir is specified, minted output should be adjusted
\usepackage{ifthen}
\usepackage{currfile-abspath}
\getabspath{\jobname.log}
\ifthenelse{\equal{\theabsdir}{\thepwd}}% using ifthen package
{}{\PassOptionsToPackage{outputdir=\theabsdir}{minted}}
% code blocks
\usepackage{minted}
\usepackage{mdframed}
\surroundwithmdframed[
        backgroundcolor=gray!5!white,
        rightline=false,
        bottomline=false,
        topline=false,
        linewidth=1pt,
        linecolor=lightgray]{minted}

% urls
\usepackage[colorlinks=true, linkcolor=black, urlcolor=blue]{hyperref}

\usepackage{longtable, array}

% \maketitle for articles
\makeatletter
\renewcommand\maketitle{
\linespread{1.6}\selectfont % for \linespread to have effect
{\raggedright
\begin{center}
{\Huge \bfseries \sffamily \@title}\\[10mm]
{\@author}\\\@date\\[10mm]
\end{center}}}
\makeatother

% do not report warnings on small hbox overful
\hfuzz=2pt

\title{Document}
\author{Maxim Kim}

\begin{document}
\maketitle
\linespread{1.2}\selectfont % for \linespread to have effect
\tableofcontents

\section{Introduction}

\notebox{A note}
\tipbox{A tip}
\warningbox{A warning}
\cautionbox{A caution}
\importantbox{An important thing}

\end{document}

